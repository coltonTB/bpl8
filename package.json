{
  "name": "serverless-server",
  "version": "1.0.2",
  "description": "",
  "main": "app.js",
  "author": "Colton Brown <coltonTB@me.com> (http://coltontbrown.com/)",
  "license": "ISC",
  "config": {
    "s3BucketName": "rad-assets",
    "region": "us-west-1",
    "lambdaFunctionName": "radicalMachinesWebserver"
  },
  "dependencies": {
    "aws-serverless-express": "^2.1.3",
    "body-parser": "^1.16.1",
    "cors": "^2.8.1",
    "css-name": "^1.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "history": "^3.2.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-inline-json-import": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "css-loader": "^0.27.2",
    "eslint": "^3.16.1",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "node-sass": "^4.5.0",
    "null-loader": "^0.1.1",
    "react-svg": "^2.1.19",
    "sass-loader": "^6.0.3",
    "scroll": "^2.0.0",
    "scroll-doc": "^0.1.3",
    "style-loader": "^0.13.2",
    "styled-components": "v2.0.0-10",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "clean": "rm -rf dist/* && cp -r src/images src/lambda.js dist",
    "lambda-zip": "cd dist && zip -q lambda-function.zip lambda.js server-bundle.js && cd ..",
    "deploy-assets": "aws s3 cp --recursive ./dist s3://$npm_package_config_s3BucketName/$npm_package_version --region $npm_package_config_region --exclude '*' --include 'images/*' --include 'assets/*'",
    "lambda-update": "aws lambda update-function-code --function-name $npm_package_config_lambdaFunctionName --region $npm_package_config_region --zip-file fileb://./dist/lambda-function.zip",
    "deploy": "npm version patch && npm run clean && npm run build && npm run lambda-zip && npm run deploy-assets && npm run lambda-update",
    "fast-deploy": "npm version patch && npm run lambda-zip && npm run deploy-assets && npm run lambda-update",
    "build": "./node_modules/.bin/webpack",
    "local": "./node_modules/.bin/nodemon -w ./dist",
    "watch": "npm run build -- --watch"
  }
}
